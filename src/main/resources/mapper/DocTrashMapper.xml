<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.IDocTrashMapper">

    <resultMap id="docTrashMap" type="com.github.xufengtian14.badwiki.model.DocTrash">
        <id property="id" column="id"></id>
        <result property="spaceId" column="space_id"></result>
        <result property="docId" column="doc_id"></result>
        <result property="docPath" column="doc_path"></result>
        <result property="deleter" column="deleter"></result>
        <result property="deleteTime" column="delete_time"></result>
    </resultMap>

    <select id="seleteDocTrashBySpaceId" resultMap="docTrashMap">
        SELECT * from doc_trash
        where space_id = #{space_id};
    </select>

    <insert id="insertDocTrash">
        insert doc_trash(space_id, doc_id, doc_path, deleter, delete_time)
        values (#{spaceId}, #{docId}, #{docPath}, #{deleter}, #{deleteTime})
    </insert>

    <delete id="deleteDocTrashById">
        delete from doc_trash
        where id = #{id}
    </delete>
</mapper>