<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.IRoleMapper">

    <resultMap id="roleMap" type="com.github.xufengtian14.badwiki.model.Role">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="note" column="note"></result>
        <result property="deleted" column="deleted"></result>
    </resultMap>

    <select id="seleteRoleById" resultMap="roleMap">
        SELECT * from role
        where id = #{id}
    </select>

    <update id="updateRoleById">
        update role
        set
        <if test="name != null and name != ''">
          name = #{name},
        </if>
        <if test="note != null and note != ''">
          note = #{note},
        </if>
        <if test="deleted != null">
          deleted = #{deleted},
        </if>
        id = #{id}
        where id = #{id}
    </update>

    <insert id="insertRole" useGeneratedKeys="true" keyProperty="id">
        insert role (name, note, deleted)
        values ( #{name}, #{note}, #{deleted} )
    </insert>

    <update id="deleteRoleById">
        update role set deleted = true where id = #{id}
    </update>
</mapper>