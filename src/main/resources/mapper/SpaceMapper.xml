<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.ISpaceAreaMapper">

    <resultMap id="spaceMap" type="com.github.xufengtian14.badwiki.model.SpaceArea">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="note" column="note"></result>
        <result property="enabled" column="enabled"></result>
    </resultMap>

    <select id="seleteSpace" resultMap="spaceMap">
        SELECT * from space
    </select>

    <select id="seleteSpaceById" resultMap="spaceMap">
        SELECT * from space
        where id = #{id}
    </select>

    <update id="updateSpaceById">
        update space
        set
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="note != null and note != ''">
            note = #{note},
        </if>
        <if test="enabled != null">
            enabled = #{enabled},
        </if>
        id = #{id}
        where id = #{id}
    </update>

    <insert id="insertSpace" useGeneratedKeys="true" keyProperty="id">
        insert role (name, note, enabled)
        values ( #{name}, #{note}, #{enabled} )
    </insert>

    <delete id="deleteSpaceById">
        delete from space
        where id = #{id}
    </delete>

</mapper>