<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.ISpacePermMapper">

    <resultMap id="spacePermMap" type="com.github.xufengtian14.badwiki.model.SpacePerm">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="note" column="note"></result>
        <result property="spaceAreaId" column="space_area_id"></result>
    </resultMap>

    <select id="selectSpacePermBySpaceIdAndRoleId" resultMap="spacePermMap">
        SELECT * from space_perm
        where space_id = #{space_id} and role_id = #{role_id};
    </select>

</mapper>