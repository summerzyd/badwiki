<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.IUserMapper">

    <resultMap id="userMap" type="com.github.xufengtian14.badwiki.model.User">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="email" column="email"></result>
        <result property="password" column="password"></result>
        <result property="loginTypeId" column="login_type_id"></result>
        <result property="activated" column="activated"></result>
        <result property="enabled" column="enabled"></result>
        <result property="deleted" column="deleted"></result>
    </resultMap>

    <select id="seleteUserById" resultMap="userMap">
        SELECT * from user
        where id = #{id}
    </select>

    <update id="updateUserById">
        update user
        set
        <if test="name != null and name != ''">
          name = #{name},
        </if>
        <if test="email != null and email != ''">
          email = #{email},
        </if>
        <if test="password != null and password != ''">
          password = #{password},
        </if>
        <if test="loginTypeId != null">
            login_type_id = #{loginTypeId},
        </if>
        <if test="activated != null">
            activated = #{activated},
        </if>
        <if test="enabled != null">
            enabled = #{enabled},
        </if>
        <if test="deleted != null">
            deleted = #{deleted},
        </if>
        id = #{id}
        where id = #{id}
    </update>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        insert user (name, email, password, login_type_id, activated, enabled, deleted)
        values ( #{name}, #{email}, #{password}, #{loginTypeId}, #{activated}, #{enabled}, #{deleted} )
    </insert>

    <update id="deleteUserById">
        update user set deleted = true where id = #{id}
    </update>
</mapper>