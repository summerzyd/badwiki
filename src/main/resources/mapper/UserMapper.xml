<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.IUserMapper">

    <resultMap id="userMap" type="com.github.xufengtian14.badwiki.model.User">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="email" column="email"></result>
        <result property="password" column="password"></result>
        <result property="loginTypeId" column="login_type_id"></result>
        <result property="actived" column="actived"></result>
        <result property="enabled" column="enabled"></result>
        <result property="deleted" column="deleted"></result>
    </resultMap>

    <select id="seleteUserById" resultMap="userMap">
        SELECT * from user
        where id = #{id};
    </select>

</mapper>