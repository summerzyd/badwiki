<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xufengtian14.badwiki.mapper.IUserRoleMapper">

    <resultMap id="userRoleMap" type="com.github.xufengtian14.badwiki.model.UserRole">
        <id property="id" column="id"></id>
        <result property="userId" column="userId"></result>
        <result property="roleId" column="roleId"></result>
        <result property="deleted" column="deleted"></result>
    </resultMap>

    <select id="selectUserRoleByUserId" resultMap="userRoleMap">
        select * from user_role
        where user_id = #{user_id}
    </select>

    <select id="selectUserRoleByRoleId" resultMap="userRoleMap">
        select * from user_role
        where role_id = #{role_id}
    </select>

</mapper>